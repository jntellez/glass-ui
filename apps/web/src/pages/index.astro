---
import "../styles/global.css";
// Direct import from the source package via workspace
import { GlassCard } from "@glass-ui-kit/glass";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Glass UI - Registry & Validation</title>

    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body class="min-h-screen font-sans antialiased p-8 md:p-20">
    <main class="max-w-4xl mx-auto space-y-12">
      <div
        class="flex justify-between items-center bg-glass-surface border border-glass-border backdrop-blur-glass p-6 rounded-2xl shadow-glass"
      >
        <div>
          <h1 class="text-2xl font-bold tracking-tight">Glass UI Kit</h1>
          <p class="text-sm opacity-70">Registry & Visual Validation System</p>
        </div>

        <button
          id="theme-toggle"
          class="px-4 py-2 rounded-lg bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/20 transition-colors font-medium text-sm"
        >
          Toggle Theme
        </button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <section class="space-y-4">
          <h2 class="text-lg font-semibold opacity-80">Registry Status</h2>
          <div
            class="p-4 rounded-xl bg-black/5 dark:bg-white/5 font-mono text-xs"
          >
            <p>
              Endpoint: <a href="/registry.json" class="underline text-blue-500"
                >/registry.json</a
              >
            </p>
            <p class="mt-2 text-green-600 dark:text-green-400">
              ‚óè Serving Static JSON
            </p>
          </div>
        </section>

        <section class="space-y-4">
          <h2 class="text-lg font-semibold opacity-80">Component: GlassCard</h2>

          <GlassCard className="w-full max-w-sm">
            <div class="space-y-2">
              <h3 class="font-semibold text-lg">Physics Simulation</h3>
              <p class="text-sm opacity-80">
                This component is imported directly from <code
                  >@glass-ui-kit/glass</code
                >. It verifies that tokens, tailwind config, and React exports
                are working.
              </p>
              <div class="pt-4 flex gap-2">
                <div
                  class="h-8 w-8 rounded-full bg-red-500/20 border border-red-500/30"
                >
                </div>
                <div
                  class="h-8 w-8 rounded-full bg-blue-500/20 border border-blue-500/30"
                >
                </div>
                <div
                  class="h-8 w-8 rounded-full bg-green-500/20 border border-green-500/30"
                >
                </div>
              </div>
            </div>
          </GlassCard>
        </section>
      </div>
    </main>

    <script>
      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      };

      document
        .getElementById("theme-toggle")
        ?.addEventListener("click", handleToggleClick);
    </script>
  </body>
</html>
