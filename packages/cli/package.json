    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@glass-ui-kit/tsconfig": "workspace:*",
    "@types/node": "^20.11.0",
    "bun-types": "latest",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
